<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="answer_letter_style">
        <item name="android:textColor">#1E034E</item>

    </style>

    <style name="answer_btn_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/answer_btn</item>
        <item name="android:textColor">#21084A</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_variant_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#F8F9FB</item>
        <item name="android:background">@drawable/variant_btn</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="placeholder_variant_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/variant_btn_placeholder</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="btn_wrong_answer_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#FFFAFA</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/wrong_answer_btn</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>