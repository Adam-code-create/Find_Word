<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F1DB1F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#B618D1"
        android:gravity="center"
        android:id="@+id/actionBar"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/aclonica"
            android:text="Find"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/star"

            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/aclonica"
        android:text="Word"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/star"
        />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star2"
        android:id="@+id/star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/questionIndexMenu"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/aclonica"
        android:textColor="#2C115E"
       app:layout_constraintTop_toTopOf="@id/star"
        app:layout_constraintBottom_toBottomOf="@id/star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <ImageView
        android:id="@+id/smallPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/apple"
        android:padding="6dp"
        android:background="#4FB09DD3"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/apple"
        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:id="@+id/mediumPic"
        android:background="#4FB09DD3"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/apple"
        android:padding="10dp"
        android:id="@+id/mainImage"
        android:background="#4FB09DD3"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/play"
        android:fontFamily="@font/aclonica"
        android:id="@+id/playGame"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@id/mainImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainImage"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exit"
        android:id="@+id/exit"
        android:layout_margin="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

<ImageView
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:id="@+id/frame"
    android:layout_margin="16dp"
    android:background="@drawable/frame_bg"
    app:layout_constraintTop_toBottomOf="@id/mainImage"
    app:layout_constraintBottom_toBottomOf="parent"


    />


    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="level 1"
        android:id="@+id/level1"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#2C115E"
        android:background="@drawable/item_bg"
        android:paddingTop="8dp"
        android:layout_margin="16dp"
        android:gravity="center|top"
        app:layout_constraintTop_toTopOf="@id/frame"
        app:layout_constraintLeft_toLeftOf="@id/frame"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/rating1"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_rating"
        app:layout_constraintRight_toRightOf="@id/level1"
        app:layout_constraintLeft_toLeftOf="@id/level1"
        app:layout_constraintTop_toBottomOf="@id/ratingscore1"
        app:layout_constraintBottom_toBottomOf="@id/level1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/ratingscore1"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:textSize="12sp"
        android:textColor="#B32C115E"
        app:layout_constraintTop_toTopOf="@id/level1"
        app:layout_constraintRight_toRightOf="@id/level1"
        app:layout_constraintLeft_toLeftOf="@id/level1"
        app:layout_constraintBottom_toBottomOf="@id/level1"
        />


    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/level2"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#2C115E"
        android:background="@drawable/item_bg2"
        android:paddingTop="8dp"
        android:layout_margin="16dp"
        android:gravity="center|top"
        app:layout_constraintTop_toTopOf="@id/frame"
        app:layout_constraintLeft_toRightOf="@id/level1"
        app:layout_constraintRight_toLeftOf="@id/level3"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_lock"
        android:id="@+id/lock"
       app:layout_constraintTop_toTopOf="@id/level2"
       app:layout_constraintRight_toRightOf="@id/level2"
        app:layout_constraintLeft_toLeftOf="@id/level2"
        app:layout_constraintBottom_toBottomOf="@id/level2"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/rating2"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@id/level2"
        app:layout_constraintLeft_toLeftOf="@id/level2"
        app:layout_constraintTop_toBottomOf="@id/ratingScore2"
        app:layout_constraintBottom_toBottomOf="@id/level2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingScore2"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:textSize="12sp"
        android:textColor="#B32C115E"
        app:layout_constraintTop_toTopOf="@id/level2"
        app:layout_constraintRight_toRightOf="@id/level2"
        app:layout_constraintLeft_toLeftOf="@id/level2"
        app:layout_constraintBottom_toBottomOf="@id/level2"
        />


    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/level3"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#2C115E"
        android:background="@drawable/item_bg2"
        android:paddingTop="8dp"
        android:layout_margin="16dp"
        android:gravity="center|top"
        app:layout_constraintTop_toTopOf="@id/frame"
        app:layout_constraintRight_toRightOf="@id/frame"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/rating3"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@id/level3"
        app:layout_constraintLeft_toLeftOf="@id/level3"
        app:layout_constraintTop_toBottomOf="@id/ratingScore3"
        app:layout_constraintBottom_toBottomOf="@id/level3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingScore3"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:textSize="12sp"
        android:textColor="#B32C115E"
        app:layout_constraintTop_toTopOf="@id/level3"
        app:layout_constraintRight_toRightOf="@id/level3"
        app:layout_constraintLeft_toLeftOf="@id/level3"
        app:layout_constraintBottom_toBottomOf="@id/level3"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lock"
        android:id="@+id/lock3"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/level3"
        app:layout_constraintRight_toRightOf="@id/level3"
        app:layout_constraintLeft_toLeftOf="@id/level3"
        app:layout_constraintBottom_toBottomOf="@id/level3"
        />



    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/level4"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#2C115E"
        android:background="@drawable/item_bg2"
        android:paddingTop="8dp"
        android:layout_margin="16dp"
        android:gravity="center|top"
        app:layout_constraintLeft_toLeftOf="@id/frame"
        app:layout_constraintTop_toBottomOf="@id/rating1"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/rating4"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@id/level4"
        app:layout_constraintLeft_toLeftOf="@id/level4"
        app:layout_constraintTop_toBottomOf="@id/ratingScore4"
        app:layout_constraintBottom_toBottomOf="@id/level4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingScore4"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:textSize="12sp"
        android:textColor="#B32C115E"
        app:layout_constraintTop_toTopOf="@id/level4"
        app:layout_constraintRight_toRightOf="@id/level4"
        app:layout_constraintLeft_toLeftOf="@id/level4"
        app:layout_constraintBottom_toBottomOf="@id/level4"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lock"
        android:id="@+id/lock4"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/level4"
        app:layout_constraintRight_toRightOf="@id/level4"
        app:layout_constraintLeft_toLeftOf="@id/level4"
        app:layout_constraintBottom_toBottomOf="@id/level4"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/level5"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#2C115E"
        android:background="@drawable/item_bg2"
        android:paddingTop="8dp"
        android:layout_margin="16dp"
        android:gravity="center|top"
        app:layout_constraintTop_toBottomOf="@id/rating2"
        app:layout_constraintLeft_toRightOf="@id/level4"
        app:layout_constraintRight_toLeftOf="@id/level6"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/rating5"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@id/level5"
        app:layout_constraintLeft_toLeftOf="@id/level5"
        app:layout_constraintTop_toBottomOf="@id/ratingScore5"
        app:layout_constraintBottom_toBottomOf="@id/level5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingScore5"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:textSize="12sp"
        android:textColor="#B32C115E"
        app:layout_constraintTop_toTopOf="@id/level5"
        app:layout_constraintRight_toRightOf="@id/level5"
        app:layout_constraintLeft_toLeftOf="@id/level5"
        app:layout_constraintBottom_toBottomOf="@id/level5"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lock"
        android:id="@+id/lock5"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/level5"
        app:layout_constraintRight_toRightOf="@id/level5"
        app:layout_constraintLeft_toLeftOf="@id/level5"
        app:layout_constraintBottom_toBottomOf="@id/level5"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/level6"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#2C115E"
        android:background="@drawable/item_bg2"
        android:paddingTop="8dp"
        android:layout_margin="16dp"
        android:gravity="center|top"
        app:layout_constraintTop_toBottomOf="@id/rating3"
        app:layout_constraintRight_toRightOf="@id/frame"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/rating6"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@id/level6"
        app:layout_constraintLeft_toLeftOf="@id/level6"
        app:layout_constraintTop_toBottomOf="@id/ratingScore6"
        app:layout_constraintBottom_toBottomOf="@id/level6"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingScore6"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:textSize="12sp"
        android:textColor="#B32C115E"
        app:layout_constraintTop_toTopOf="@id/level6"
        app:layout_constraintRight_toRightOf="@id/level6"
        app:layout_constraintLeft_toLeftOf="@id/level6"
        app:layout_constraintBottom_toBottomOf="@id/level6"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lock"
        android:id="@+id/lock6"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/level6"
        app:layout_constraintRight_toRightOf="@id/level6"
        app:layout_constraintLeft_toLeftOf="@id/level6"
        app:layout_constraintBottom_toBottomOf="@id/level6"
        />



</androidx.constraintlayout.widget.ConstraintLayout>